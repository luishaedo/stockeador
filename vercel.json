{
    "builds": [
      {
        "src": "client/package.json", 
        "use": "@vercel/node", 
        "config": {
          "maxLambdaSize": "50mb"
        }
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "/client/$1"
      }
    ],
    "env": {
      "NODE_ENV": "production"
    }
  }
  